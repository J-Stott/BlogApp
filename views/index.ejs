<%- include("partials/header") %>

    <div class="main-container">
        <div class="main-content">

            <% posts.forEach((post) => { %>
                <div class="post">
                    <h1><%=post.title%></h1>
                    
                    <%if(post.content.length > 200){%>
                    <p class="post-content"><%=post.content.slice(0, 200)%> ... <a href="/posts/<%=post._id%>">Read More</a></p>
                    <%}else{%>
                        <p class="post-content"><%=post.content%> <a href="/posts/<%=post._id%>">Read Post</a></p>
                    <%}%>
                    
                </div>
            <%});%>
        </div>
    </div>


<%- include("partials/footer") -%>
